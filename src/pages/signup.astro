---
import Layout from "../layouts/Layout.astro";
import pb from "../utils/pb";
import { Collections } from "../utils/pocketbase-types";

// Si l'utilisateur est déjà connecté, on le redirige
if (Astro.locals.user) {
    return Astro.redirect("/");
}
---

<html lang="fr" data-theme="light">
    <Layout>
    <head>
        <title>Inscription</title>
        <meta name="viewport" content="width=device-width" />
        <link
            href="https://cdn.jsdelivr.net/npm/daisyui@3.8.0/dist/full.css"
            rel="stylesheet"
            type="text/css"
        />
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body class="min-h-screen flex items-center justify-center bg-base-200">
        <div class="card w-full max-w-md shadow-xl bg-base-100">
            <div class="card-body">
                <h1 class="card-title text-3xl mb-4 justify-center">
                    Créer un compte
                </h1>

                <form id="signup-form" class="flex flex-col gap-4">
                    <input
                        type="text"
                        name="username"
                        placeholder="Nom d'utilisateur"
                        required
                        class="input input-bordered"
                    />
                    <input
                        type="email"
                        name="email"
                        placeholder="Email"
                        required
                        class="input input-bordered"
                    />
                    <input
                        type="password"
                        name="password"
                        placeholder="Mot de passe"
                        required
                        class="input input-bordered"
                    />
                    <input
                        type="password"
                        name="passwordConfirm"
                        placeholder="Confirmez le mot de passe"
                        required
                        class="input input-bordered"
                    />
                    <button type="submit" class="btn btn-primary w-full">
                        S'inscrire
                    </button>
                </form>

                <p id="status" class="mt-4 text-center text-error"></p>

                <p class="text-center text-sm mt-2">
                    Déjà un compte ?
                    <a href="/login" class="text-blue-500 hover:underline"
                        >Se connecter</a
                    >
                </p>
            </div>
        </div>
    </body></Layout>
</html>

<script>
    //@ts-nocheck
    const form = document.getElementById("signup-form");
    const status = document.getElementById("status");

    form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);

        const email = formData.get("email");
        const password = formData.get("password");
        const passwordConfirm = formData.get("passwordConfirm");
        const username = formData.get("username");

        if (password !== passwordConfirm) {
            status.textContent = "❌ Les mots de passe ne correspondent pas.";
            return;
        }

        try {
            // Enregistrement de l'utilisateur dans PocketBase
            const res = await fetch("/api/signup", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    email,
                    password,
                    passwordConfirm,
                    username,
                }),
            });

            if (!res.ok) {
                const err = await res.json();
                status.textContent =
                    "❌ " + (err.error || "Erreur lors de l'inscription.");
                return;
            }

            // Si tout s’est bien passé, on redirige vers la page de login
            status.textContent = "✅ Compte créé avec succès ! Redirection...";
            setTimeout(() => {
                window.location.href = "/login";
            }, 1500);
        } catch (error) {
            console.error("Erreur lors de l'inscription :", error);
            status.textContent = "❌ Erreur serveur.";
        }
    });
</script>
